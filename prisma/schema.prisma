generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InventoryStart {
  id           String   @id @default(cuid())
  baseType     String
  category     String
  size         String
  startQty     Int      @default(0)
  minQty       Int      @default(0) // âœ… NEU
  updatedAt    DateTime @updatedAt

  @@unique([baseType, category, size], name: "baseType_category_size")
  @@index([baseType, category])
}

model InventoryMovement {
  id             String   @id @default(cuid())
  orderId         String
  orderCreatedAt  DateTime
  baseType        String
  category        String
  size            String
  qtyUsed         Int
  createdAt       DateTime @default(now())

  @@unique([orderId, baseType, category, size], name: "orderId_baseType_category_size")
  @@index([orderCreatedAt])
  @@index([baseType, category, size])
}

model ProductBaseTagCache {
  productId    String   @id
  baseType     String?
  tagsRaw      String?
  updatedAt    DateTime @updatedAt
}

model ProcessedOrder {
  orderId        String   @id
  orderName      String?
  orderCreatedAt DateTime?
  processedAt    DateTime @default(now())

  @@index([orderCreatedAt])
}

model InventorySettings {
  id          String   @id @default("default")
  defaultFrom DateTime?
  updatedAt   DateTime @updatedAt
}

model InventoryEmailLog {
  id          String   @id @default(cuid())
  kind        String
  forDate     DateTime // UTC day (00:00)
  sentAt      DateTime @default(now())
  criticalCnt Int      @default(0)

  @@unique([kind, forDate], name: "kind_forDate")
  @@index([forDate])
}




